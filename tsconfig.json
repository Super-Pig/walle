{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["src/lib/*"]
    },
    "lib": [
      "es6", "es7", "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./typings"
  ],
  "exclude": [
    "node_modules",
    "logs",
    "test",
    "dist"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}